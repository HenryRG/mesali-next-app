generator client {
  provider = "prisma-client-js"
}

// npx prisma db push
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Restaurant {
  id          Int      @id @default(autoincrement())
  name        String
  main_image  String
  description String
  images      String[]
  slug        String   @unique
  price       PRICE
  open_time   String
  close_time  String
  created_at  DateTime @default(now())
  update_at   DateTime @updatedAt
  location_id Int
  cuisine_id  Int
  items       Item[]
  review      Review[]
  cuisine     Cuisine  @relation(fields: [cuisine_id], references: [id])
  location    Location @relation(fields: [location_id], references: [id])
}

model Item {
  id            Int        @id @default(autoincrement())
  name          String
  price         String
  description   String
  restaurant_id Int
  created_at    DateTime   @default(now())
  update_at     DateTime   @updatedAt
  restaurant    Restaurant @relation(fields: [restaurant_id], references: [id])
}

model Location {
  id          Int          @id @default(autoincrement())
  name        String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  restaurants Restaurant[]
}

model Cuisine {
  id          Int          @id @default(autoincrement())
  name        String
  created_at  DateTime     @default(now())
  updated_at  DateTime     @updatedAt
  restaurants Restaurant[]
}

enum PRICE {
  CHEAP
  REGULAR
  EXPENSIVE
}

model User {
  id         Int      @id @unique @default(autoincrement())
  first_name String
  last_name  String
  city       String
  email      String   @unique
  phone      String   @unique
  password   String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  review     Review[]
}

model Review {
  id            Int        @unique @default(autoincrement())
  first_name    String
  last_name     String
  text          String
  rating        Float
  restaurant_id Int
  restaurant    Restaurant @relation(fields: [restaurant_id], references: [id])
  user_id       Int
  user          User       @relation(fields: [user_id], references: [id])
  created_at    DateTime   @default(now())
  updated_at    DateTime   @updatedAt
}
